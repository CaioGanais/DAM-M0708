<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoinicio2"
    android:orientation="vertical"
    tools:context=".MenuLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/memory_game"
            android:layout_width="189dp"
            android:layout_height="91dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="180dp"
            android:baselineAligned="false"
            android:fontFamily="@font/superfly"
            android:lineSpacingExtra="12sp"
            android:rotationX="28"
            android:rotationY="-9"
            android:text="memory"
            android:textAllCaps="true"
            android:textColor="#131313"
            android:textSize="48sp"
            android:typeface="normal" />

        <TextView
            android:id="@+id/memory_game4"
            android:layout_width="149dp"
            android:layout_height="61dp"
            android:layout_marginStart="-36dp"
            android:layout_marginTop="210dp"
            android:fontFamily="@font/superfly"
            android:lineSpacingExtra="12sp"
            android:rotationX="28"
            android:rotationY="-9"
            android:text="GAME "
            android:textAllCaps="true"
            android:textColor="#D80401"
            android:textSize="45sp"
            android:typeface="normal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="295dp"
        android:layout_height="213dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="-340dp"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spinner_button"
            android:layout_width="295dp"
            android:layout_height="48dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/gameplay"
            android:text="@string/difficulty"
            android:textColor="@color/primaryDarkColor"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <Button
            android:id="@+id/start_button"
            android:layout_width="295dp"
            android:layout_height="48dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/gameplay"
            android:text="start"
            android:textColor="#FF9800" />

        <Button
            android:id="@+id/rules_button"
            android:layout_width="295dp"
            android:layout_height="48dp"
            android:fontFamily="@font/gameplay"
            android:text="rules"
            android:textColor="#FF9800" />

    </LinearLayout>

</LinearLayout>